{
  "entryFile": "./src/app.ts",
  "noImplicitAdditionalProperties": "throw-on-extras",
  "controllerPathGlobs": ["./src/**/*.controller.ts"],
  "spec": {
    "outputDirectory": "./",
    "specVersion": 3,
    "securityDefinitions": {
      "jwt": {
        "type": "http",
        "scheme": "bearer",
        "name": "Authorization",
        "in": "headers"
      }
    }
  },
  "routes": {
    "routesDir": "./src",
    "authenticationModule": "./src/services/auth/authTsoa.service.ts"
  }
}
